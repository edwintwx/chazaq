<div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mb-3">
  <div class="card-post">
    <% if post.post_photos[0].nil? %>
      <%= image_tag("postcard-0#{rand(1..4)}.png") %>
    <% else %>
      <%= image_tag(post.post_photos[0].photo.url) %>
      <%#= cl_image_tag(post.post_photos[0].photo, default_image: "postcard-0#{rand(1..3)}.jpg", crop: "fill") %>
    <% end %>
    <%= link_to post_path(post) do %>
      <div class="card-post-infos">
        <div>
          <% if post.request %>
            <small class="bg-warning px-2">Request</small>
          <% end %>
          <% if post.testimonial %>
            <small class="bg-info px-2">Testimonial</small>
          <% end %>
          <% if post.isPrivate %>
            <small class="bg-secondary px-2">Private</small>
          <% end %>
          <p><%= post.content %></p>
          <small class="text-muted"><%= post.created_at.strftime("%b %e, %l:%M %p") %></small>
        </div>
        <% if post.user.avatar.file.nil? %>
          <%= image_tag("avatar-default.png", class: "card-post-user avatar-bordered", width: "40", height: "40", crop: "thumb", alt: "avatar") %>
        <% else %>
          <%= image_tag(post.user.avatar.thumb.url, class: "card-post-user avatar-large", crop: "fill", alt: "avatar") %>
          <%#= cl_image_tag(post.user.avatar, default_image: "avatar-default.png", class: "card-post-user avatar-bordered", width: "40", height: "40", crop: "thumb", alt: "avatar") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
