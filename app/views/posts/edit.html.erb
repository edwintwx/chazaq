<div class="container my-5">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mx-auto">
      <% type = @post.request ? "request" : "testimonial" %>
      <h2 class="mb-3">Edit your <%= type %></h1>
      <%= simple_form_for [@post] do |f| %>
        <%= f.input :content, label: "Type below to edit your #{type}" %>
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Back", post_path(@post), class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
