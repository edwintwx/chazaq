<p><%= cl_image_tag(@post.post_photos[0].photo, width: 400, height: 300, crop: :fill) %></p>
<p><%= @post.content %></p>
<p><%= link_to @post.user.first_name, user_path(@post.user) %></p>
<p>
  <% if @post.request %>
    Request
  <% end %>
  <% if @post.testimonial %>
    Testimonial
  <% end %>
</p>
<p>#Likes: <%= @post.hearts.count %></p>
<p>Comments</p>
<p>
  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= comment.content %> - <%= link_to 'Edit', edit_comment_path(comment) %> | <%= link_to 'Delete', comment_path(comment), method: :delete %></li>
    <% end %>
  </ul>
</p>
<p>
  <%= link_to 'Like', post_hearts_path(@post), method: :post %> |
  <%= link_to 'Unlike', heart_path(@post), method: :delete %> |
  <%= link_to 'Comment', new_post_comment_path(@post) %> |
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', post_path(@post), method: :delete %>
</p>
