<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("chazaq.png", width: "150") %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fas fa-home"></i> Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_post_path(type: "prayer"), class: "nav-link" do %>
            <i class="fas fa-plus-circle"></i> Prayer
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_post_path(type: "testimonial"), class: "nav-link" do %>
            <i class="fas fa-plus-circle"></i> Testimonial
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to user_path(current_user), class: "nav-link" do %>
            <i class="fas fa-user"></i> Me
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
