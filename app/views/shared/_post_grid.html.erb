<div>
  <ul class="nav nav-pills bg-white py-3 my-2 mx-auto justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-all-tab" data-toggle="pill" href="#all" role="tab" aria-controls="pills-all" aria-selected="true">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-request-tab" data-toggle="pill" href="#request" role="tab" aria-controls="pills-request" aria-selected="true">Prayer Requests</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-testimonial-tab" data-toggle="pill" href="#testimonial" role="tab" aria-controls="pills-testimonial" aria-selected="false">Testimonials</a>
    </li>
  </ul>
</div>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
    <div class="container mt-3">
      <div class="row">
        <% @posts.each do |post| %>
          <%= render "components/post_card", post: post %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade show" id="request" role="tabpanel" aria-labelledby="request-tab">
    <div class="container mt-3">
      <div class="row">
        <% @posts.each do |post| %>
          <% if post.request %>
            <%= render "components/post_card", post: post %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="testimonial" role="tabpanel" aria-labelledby="testimonial-tab">
    <div class="container mt-3">
      <div class="row">
        <% @posts.each do |post| %>
          <% if post.testimonial %>
            <%= render "components/post_card", post: post %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
