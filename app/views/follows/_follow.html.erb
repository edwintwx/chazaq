<div class="follow">
  <% if @user.followed_by?(current_user) %>
    <%= form_tag user_follow_path(@user), method: :delete do %>
      <%= button_tag 'Unfollow', class: 'btn btn-primary' %>
    <% end %>
  <% else %>
    <%= form_tag user_follows_path(@user), method: :post do %>
      <%= button_tag 'Follow', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
